<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyVersion>0.0.0.5</AssemblyVersion>
    <FileVersion>0.0.0.4</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="UserControls\NoteListControl.xaml" />
    <AvaloniaResource Remove="UserControls\NoteTreeControl.xaml" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="UserControls\NoteTreeControl - Copy.xaml.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="UserControls\NoteListControl.xaml" />
    <None Remove="UserControls\NoteTreeControl.xaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.7" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.7" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.7" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="UserControls\NoteListControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Include="UserControls\NoteTreeControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="UserControls\NoteTreeControl.xaml.cs">
      <DependentUpon>NoteTreeControl.xaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
